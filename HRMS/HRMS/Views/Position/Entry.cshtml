@{
    ViewData["Title"] = "Position Entry";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-body">
            <h2 class="mb-4 text-primary">Position Entry</h2>

            @{
                var info = ViewData["info"];
            }
            @if (info != null)
            {
                <div class="alert @(Convert.ToBoolean(ViewData["status"]) ? "alert-success" : "alert-danger")" role="alert">
                    @info
                </div>
            }

            <form action="/Position/Entry" method="post">
                <div class="mb-3">
                    <label class="form-label">Position Code:</label>
                    <input type="text" class="form-control" name="Code" required placeholder="Enter position code">
                </div>

                <div class="mb-3">
                    <label class="form-label">Position Name:</label>
                    <input type="text" class="form-control" name="Name" required placeholder="Enter position name">
                </div>

                <div class="mb-3">
                    <label class="form-label">Level:</label>
                    <input type="number" class="form-control" name="Level" required value="1" min="1">
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Submit
                    </button>
                    <a href="/position/list" class="btn btn-outline-primary ms-2">
                        <i class="fas fa-list"></i> View List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>