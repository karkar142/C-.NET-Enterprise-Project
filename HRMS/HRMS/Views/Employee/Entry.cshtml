@{
    ViewData["Title"] = "Employee";
}
<div class="container mt-4">
    <h1 class="fw-bold">Employee Entry</h1>

    @if (ViewData["Info"] != null)
    {
        <div class="alert @(Convert.ToBoolean(ViewData["Status"]) ? "alert-success" : "alert-danger")" role="alert">
            @ViewData["Info"]
        </div>
    }

    <form action="/Employee/Entry" method="post" class="mt-3">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Code:</label>
                    <input type="text" class="form-control" name="Code" required placeholder="Employee Code">
                </div>
                <div class="mb-3">
                    <label class="form-label">Name:</label>
                    <input type="text" class="form-control" name="Name" required placeholder="Full Name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Email:</label>
                    <input type="email" class="form-control" name="Email" required placeholder="example@gmail.com">
                </div>
                <div class="mb-3">
                    <label class="form-label">Gender:</label>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" name="Gender" value="f" required>
                        <label class="form-check-label">Female</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" name="Gender" value="m" required>
                        <label class="form-check-label">Male</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Date of Birth:</label>
                    <input type="date" class="form-control" name="DOB" required min="1990-01-01" max="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="mb-3">
                    <label class="form-label">Date of Employment:</label>
                    <input type="date" class="form-control" name="DOE" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Date of Retirement:</label>
                    <input type="date" class="form-control" name="DOR">
                </div>
            </div>

            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Address:</label>
                    <input type="text" class="form-control" name="Address" required placeholder="Full Address">
                </div>
                <div class="mb-3">
                    <label class="form-label">Phone Number:</label>
                    <div class="input-group">
                        <select class="form-select" name="CountryCode" required>
                            <option value="+1">🇺🇸 +1 (USA)</option>
                            <option value="+44">🇬🇧 +44 (UK)</option>
                            <option value="+65" selected>🇸🇬 +65 (Singapore)</option>
                            <option value="+91">🇮🇳 +91 (India)</option>
                            <option value="+81">🇯🇵 +81 (Japan)</option>
                            <option value="+95">🇲🇲 +95 (Myanmar)</option>
                            <option value="+61">🇦🇺 +61 (Australia)</option>
                        </select>
                        <input type="tel" class="form-control" name="PhoneNo" pattern="^\d{6,15}$" required placeholder="Enter your phone number">
                    </div>
                    <small class="text-muted">Enter 6 to 15 digits, no special characters.</small>
                </div>

                <div class="mb-3">
                    <label class="form-label">Basic Salary:</label>
                    <input type="number" class="form-control" name="BasicSalary" required placeholder="Enter Salary">
                </div>
                <div class="mb-3">
                    <label class="form-label">Position:</label>
                    <select class="form-select" name="PositionId" required>
                        <option value="" selected disabled>Select Position</option>
                        @foreach (var position in ViewBag.PositionViews)
                        {
                            <option value="@position.Id">@position.Code</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Department:</label>
                    <select class="form-select" name="DepartmentId" required>
                        <option value="" selected disabled>Select Department</option>
                        @foreach (var department in ViewBag.DepartmentViews)
                        {
                            <option value="@department.Id">@department.Code</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/Employee/list" class="btn btn-outline-primary">View List</a>
        </div>
    </form>
</div>
